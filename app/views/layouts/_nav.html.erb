<% if !controller.devise_controller? %>
    <a class="brand" href="<%= edit_user_registration_path %>"><%= current_user.username %></a>
    <ul class="nav">
      <li><%= link_to "Home", passwords_path%></li>
      <% if current_user.group? :administrator%>
        <li><%= link_to "Users", admin_users_path%></li>
        <li><%= link_to "Groups", admin_groups_path%></li>
      <% end %>
      <%= yield :nav %>
    </ul>
     <ul class="nav pull-right">
      <li><%= link_to "Logout", destroy_user_session_path(), :method => :delete %></li>
    </ul>
    <form class="navbar-search pull-right">
      <input id="search-box" name="Search" type="text" class="search-query" placeholder="Search" />
      <div class="dropdown" id="search-results">
        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
        </ul>
      </div>
    </form>
<% end %>